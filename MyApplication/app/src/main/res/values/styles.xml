<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义ActionMode样式 -->
    <style name="CustomActionMode" parent="Widget.AppCompat.ActionMode">
        <!-- 修改返回图标 -->
        <item name="homeAsUpIndicator">@drawable/check_foreground</item>
        <!-- 可选：修改背景色 -->
        <item name="background">@color/dark_blue</item>
        <!-- 可选：修改文字颜色 -->
        <item name="titleTextStyle">@style/ActionModeTitle</item>
    </style>

    <!-- 可选：定义标题文字样式 -->
    <style name="ActionModeTitle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>